	<licenses>
		<license>
			<name>GNU LESSER GENERAL PUBLIC LICENSE 3.0</name>
			<url>http://www.gnu.org/licenses/lgpl-3.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<!-- Developer Information -->
	<developers>
		<developer>
			<name>Trent Houliston</name>
			<email>trent@houliston.me</email>
		</developer>
	</developers>

	<!-- Inception Year -->
	<inceptionYear>2012</inceptionYear>

	<!-- Issue management details -->
	<issueManagement>
		<system>GitHub</system>
		<url>https://github.com/TrentHouliston/Niowire/issues</url>
	</issueManagement>

	<!-- Source Control Management -->
	<scm>
		<url>https://github.com/TrentHouliston/Niowire</url>
		<connection>git://github.com/TrentHouliston/Niowire.git</connection>
		<developerConnection>git@github.com:TrentHouliston/Niowire.git</developerConnection>
		<tag>develop</tag>
	</scm>

	<!-- Continous Integeration Server -->
	<ciManagement>
		<system>jenkins</system>
		<url>https://jenkins.houliston.me/job/Niowire/</url>
		<notifiers>
			<notifier>
				<type>mail</type>
				<sendOnError>true</sendOnError>
				<sendOnFailure>true</sendOnFailure>
				<sendOnSuccess>false</sendOnSuccess>
				<sendOnWarning>false</sendOnWarning>
			</notifier>
		</notifiers>
	</ciManagement>


	<!-- Dependencies -->
	<dependencies>
		<!-- The Logging framework -->
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
			<version>1.0.9</version>
			<scope>compile</scope>
			<type>jar</type>
		</dependency>

		<!-- Gson for parsing Json data -->
		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>2.2.2</version>
			<scope>compile</scope>
			<type>jar</type>
		</dependency>

		<!-- JUnit for unit testing -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
			<type>jar</type>
		</dependency>

		<!-- Mockito for mocking unit test objects -->
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<version>1.9.5</version>
			<scope>test</scope>
			<type>jar</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<!-- Compiler plugin, compiles java files -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<!-- This project is using Java 6 -->
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<!-- Jar plugin, builds the jar -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<index>true</index>
					</archive>
				</configuration>
			</plugin>

			<!-- Builds the Sources jar -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.2.1</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- Builds the Javadoc jar -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<tags>
						<tag>
							<!-- Custom tag for configurations -->
							<name>configparam</name>
							<placement>aoptcmf</placement>
							<head>Configuration Parameters:</head>
						</tag>
					</tags>
				</configuration>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- Cobertura plugin for code coverage reporting -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.5.2</version>
				<configuration>
					<formats>
						<format>xml</format>
					</formats>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>cobertura</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<properties>
		<!-- All source files should be UTF-8 -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

